---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section class="relative h-screen flex items-center justify-center text-center text-white">
  <div class="absolute inset-0 bg-black opacity-50"></div>
  <div class="relative z-10">
    <h1 class="text-5xl font-bold mb-4">{t('hero.welcome')}</h1>
    <p class="text-xl mb-8">{t('hero.subtitle')}</p>
    <a href="#reservation" class="bg-accent hover:bg-accent-dark text-white font-bold py-2 px-4 rounded transition duration-300">
      Reserva con Nosotros!
    </a>
  </div>
  <div class="absolute inset-0 -z-10">
    <img
      src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80"
      alt="Restaurant hero image"
      class="w-full h-full object-cover"
    />
  </div>
</section>