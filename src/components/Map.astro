---
const mapUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d225.14111112942936!2d-108.08108964934945!3d25.463066512168314!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x86bb8796edd4c5fd%3A0x2d868d50c85983dc!2sDelicious%20Restaurant%20Bar!5e0!3m2!1sen!2smx!4v1728446060592!5m2!1sen!2smx";
---

<section id="location" class="map-container">
  <h2>Our Location</h2>
  <div class="map-wrapper">
    <iframe
      src={mapUrl}
      width="600"
      height="450"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
    ></iframe>
  </div>
</section>

<style>
  .map-container {
    padding: 2rem;
    text-align: center;
    background-color: var(--bg-color);
  }

  h2 {
    margin-bottom: 1rem;
    color: var(--accent-color);
  }

  .map-wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    height: 0;
    overflow: hidden;
    max-width: 100%;
  }

  iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  @media (max-width: 768px) {
    .map-container {
      padding: 1rem;
    }
  }
</style>