---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const menuSections = [
  {
    title: t('menu.appetizers'),
    items: [
      { name: 'Brochetas', price: '$100' },
      { name: 'Guacamole', price: '$100' },
      { name: 'Queso Fundido', price: '$100' },
    ]
  },
  {
    title: t('menu.mainCourses'),
    items: [
      { name: 'Arrachera', price: '$100' },
      { name: 'Rib Eye', price: '$100' },
      { name: 'Salm√≥n al Horno', price: '$100' },
    ]
  },
  {
    title: t('menu.desserts'),
    items: [
      { name: 'Pay de Guayaba', price: '$100' },
      { name: 'Flan', price: '$100' },
      { name: 'Choco Flan', price: '$100' },
    ]
  }
];
---
<section id="menu" class="menu">
  <h2>{t('menu.title')}</h2>
  {menuSections.map(section => (
    <div class="menu-section">
      <h3>{section.title}</h3>
      <ul>
        {section.items.map(item => (
          <li>
            <span class="dish">{item.name}</span>
            <span class="price">{item.price}</span>
          </li>
        ))}
      </ul>
    </div>
  ))}
</section>

<style>
  .menu {
    background-color: var(--bg-color);
    padding: 2rem;
    text-align: center;
  }
  h2 {
    margin-bottom: 2rem;
    color: var(--accent-color);
  }
  .menu-section {
    margin-bottom: 2rem;
  }
  h3 {
    margin-bottom: 1rem;
    color: var(--accent-dark);
  }
  ul {
    list-style-type: none;
    padding: 0;
  }
  li {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }
  .dish {
    font-weight: bold;
  }
  .price {
    color: var(--accent-color);
  }
</style>